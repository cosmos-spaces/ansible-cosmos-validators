[Unit]
Description={{ chain }}Price Feeder
After=network-online.target

[Service]
User={{ ansible_user }}
ExecStart=/usr/bin/sh -c 'echo {{ price_feeder_password }} | {{ user_dir }}/go/bin/{{ chain }}_price_feeder {{ user_dir }}/.price_feeder/{{ chain }}.toml'
Restart=always
StartLimitInterval=0
RestartSec=3

[Install]
WantedBy=multi-user.target

[Service]
LimitNOFILE=65535